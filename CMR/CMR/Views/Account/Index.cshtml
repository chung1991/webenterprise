@model IEnumerable<CMR.Models.UserDetailModel>

<p>
    @Html.ActionLink("Create New", "Register")
    @{
        var index = 0;
    }
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
               @Html.Display("Index")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.roleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telelphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.birthday)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                index++;
                @index
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.roleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telelphone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.birthday)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { accountId = item.accountId }) |
                    @Html.ActionLink("Detail", "Detail", new { accountId = item.accountId }) |
                    @Html.ActionLink("Delete", "Delete", new { accountId = item.accountId })
                </td>
            </tr>
        }

    </table>
</div>


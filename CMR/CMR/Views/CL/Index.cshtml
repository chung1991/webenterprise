@model IEnumerable<CMR.Models.AnnualCourse>
<h4>Your Courses</h4>
@{
	var index = 1;
}

@if (Model.Count() > 0)
{
    <table id="tableCourse" class="tablesaw" data-tablesaw-mode="stack">
        <thead>
            <tr>
                <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="persist">
                    @Html.DisplayName("#")
                </th>
                <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1">
                    @Html.DisplayName("Course Name")
                </th>
                <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="2">
                    @Html.DisplayName("Academic Year")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            @index
                index++;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.courseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.academicYear)
                    </td>

                    <td>
                        @{
                var report = item.CourseMonitoringReports.FirstOrDefault();
                if (report == null)
                {
                    @Html.ActionLink("Create Report", "CreateReport", new { annualCourseId = item.annualCourseId })
                }
                        }

                    </td>
                </tr>
            }
        </tbody>
</table>
}
else
{
	<div class="no-data">No data.</div>
}



@model CMR.Models.CourseMonitoringReport

<div>
    <h4>CourseMonitoringReport</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Course Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AnnualCourse.Course.name)
        </dd>
        <dt>
            @Html.DisplayName("Fail Count")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.failCount)
        </dd>

        <dt>
            @Html.DisplayName("Pass Count")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.passCount)
        </dd>

        <dt>
            @Html.DisplayName("Credit Count")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.creditCount)
        </dd>

        <dt>
            @Html.DisplayName("Dist count")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.distinctionCount)
        </dd>

        <dt>
            @Html.DisplayName("Evaluation")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.evaluation)
        </dd>

        <dt>
            @Html.DisplayName("Status")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApproveStatu.name)
        </dd>
        <dt>
            @Html.DisplayName("Sender")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnnualCourse.Account.userName)
        </dd>
        <dt>
            Action
        </dt>

        <dd>
            <a href="#" data-toggle="modal" data-target="#myModal">Action</a>
        </dd>
    </dl>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Report Action</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Approve","CM",FormMethod.Post))
                {
                    @Html.HiddenFor(model=>model.CourseMonitoringReportId)
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("status", (SelectList)ViewBag.status, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextArea("approve_desc", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                } 
            </div>
        </div>
        
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
